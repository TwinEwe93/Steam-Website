html
    head
      title
        =Title
      include head.pug
    body#L_Blue
      include navbar.pug
      H1.centered
        =Title
      br
      for data in result
        Span
          div#Game_Container
            img(src=data.IMG_Link)
            br
            br
            a(href=data.Steam_Link)
              strong=data.Game_Name
            br
            a
              strong App ID: 
              =data.App_ID 
            br
            a 
              strong Price: 
              -if (data.Price === 0)
                ="Coming Soon"
              -else
                ="$" + data.Price
            br
            a
              strong Description: 
              =data.Description